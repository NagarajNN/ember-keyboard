  @parentActivated={{this.keyboardActivated}}
  @activatedToggle={{true}}
  data-test-counter
/>
<KeyDownCounter
  @parentActivated={{this.keyboardActivated}}
  @activatedToggle={{true}}
  data-test-counter
/>
